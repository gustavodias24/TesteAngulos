<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/layout_border_round"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Está disponível uma nova versão do\10 Clinômetro Florestal! Visitar a loja agora?"
        android:textAlignment="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_not"
            android:background="@drawable/border_buttons_red"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:text="Não"
            android:layout_alignParentLeft="true"/>
        <Button
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_yes"
            android:background="@drawable/border_buttons_green"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:text="Sim"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
